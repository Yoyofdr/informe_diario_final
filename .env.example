# Variables de entorno para Informe Diario Chile
# Copia este archivo a .env y completa con tus valores

# Configuración de Django
SECRET_KEY=tu-secret-key-django-aqui
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,tu-dominio.com

# Base de datos (PostgreSQL)
DATABASE_URL=postgres://usuario:password@localhost:5432/nombre_db

# Configuración de Email - Hostinger
HOSTINGER_EMAIL_PASSWORD=tu-password-email
EMAIL_FROM=contacto@informediariochile.cl
EMAIL_FROM_NAME=Informe Diario Chile
SMTP_SERVER=smtp.hostinger.com
SMTP_PORT=587

# Email por defecto para pruebas
DEFAULT_TO_EMAIL=tu-email@ejemplo.com

# APIs de IA para resúmenes
OPENAI_API_KEY=tu-api-key-openai
GEMINI_API_KEY=tu-api-key-gemini  # Opcional
DEEPSEEK_API_KEY=tu-api-key-deepseek  # Opcional

# Configuración de Heroku (si aplica)
HEROKU_APP_NAME=tu-app-heroku